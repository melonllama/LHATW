gun_key = keyboard_check_pressed(ord('2'));
shotty_key = keyboard_check_pressed(ord('3'));
mgun_key = keyboard_check_pressed(ord('4'));

//flip function
if(left_key == 1) {
    global.Flip = -1;
}
if(right_key == 1) {
    global.Flip = 1;
}

//actions to input

if(right_key == 1){
    global.hsp = movespeed;
} else if(left_key == 1){
    global.hsp = -movespeed;
} else {
    global.hsp = 0;
};  

if(place_meeting(x,y+1,obj_qsand)) {
    global.qsandspeed = .6
    global.qsandmax = 9;
    jsp= 2;
    movespeed = 1;
} else {
    global.qsandspeed = 0;
    global.qsandmax = 1;
    jsp = 16.5;
    movespeed = 5;
}

if(place_meeting(x,y,obj_qsand) &amp;&amp; global.vsp &gt; 2) {
    global.vsp = 0;
}

if(global.vsp &lt; 10/global.qsandmax) {
    global.vsp += global.grav - global.qsandspeed;
};

if(place_meeting(x,y+1,Wall_obj)){  
    djump = 1
    sjump = 0
};
if (djump &gt;= 0 &amp;&amp;  up_key = 1) {
global.vsp = -jsp;
djump -= 1
};


if(sword_key == 1) {
    global.weaponSwitch = 0;
}

if(gun_key == 1) {
    global.weaponSwitch = 1;
}
if(shotty_key == 1) {
    global.weaponSwitch = 2;    
}
if(mgun_key == 1) {
    global.weaponSwitch = 3;    
}

//Gun Switching

//Sword

if (Screa == 0 &amp;&amp; global.weaponSwitch == 0) {
    instance_create(x,y,sword_obj);
    Screa=1;
}

if (Screa == 1 &amp;&amp; global.weaponSwitch != 0) {
    with(sword_obj) {
        instance_destroy();
    }
    Screa=0;
}

//Gun

if (global.Gcrea == 0 &amp;&amp; global.weaponSwitch == 1) {
    instance_create(x,y,obj_tom);
    global.Gcrea=1;
}

if (global.Gcrea == 1 &amp;&amp; global.weaponSwitch != 1) {
    with(obj_tom) {
        instance_destroy();
    }
    global.Gcrea=0;
}

//Shotgun

if (global.SHcrea == 0 &amp;&amp; global.weaponSwitch == 2) {
    instance_create(x,y,obj_shotty);
    global.SHcrea = 1;
}

if (global.SHcrea == 1 &amp;&amp; global.weaponSwitch != 2) {
    with(obj_shotty) {
        instance_destroy();
    }
    global.SHcrea=0;
}

//Minigun

if (global.MGcrea == 0 &amp;&amp; global.weaponSwitch == 3) {
    instance_create(x,y,obj_minigun);
    global.MGcrea = 1;
}

if (global.MGcrea == 1 &amp;&amp; global.weaponSwitch != 3) {
    with(obj_minigun) {
        instance_destroy();
    }
    global.MGcrea=0;
}


//KnockBack

if (kbcounter &lt; 4) {
    global.hsp += (10 * -sign(global.kbdr))
    kbcounter += 1
}
if (icounter &lt; 30) {
    invis = 1
    icounter += 1
} else {
    invis = 0
}

//SideJump

if ((keyboard_check_pressed(vk_right) || keyboard_check_pressed(vk_left)) &amp;&amp; sjdelay &gt; 0 &amp;&amp; sjump = 0) {
global.sjcounter = 15
sjdelay = 0
sjump = 1
}
if ((keyboard_check_pressed(vk_right) || keyboard_check_pressed(vk_left)) &amp;&amp; sjdelay = 0) {
sjdelay = 15
}
if (global.sjcounter &gt; 0) {
global.sjcounter -= 1
global.hsp += (global.sjcounter * global.Flip)
if (global.sjcounter &gt; 5) {
global.vsp -= global.vsp
}
}
if (sjdelay &gt; 0) {
sjdelay -= 1
}

//collision

if (place_meeting(x + global.hsp, y ,Wall_obj)) {
    while(!place_meeting(x+sign(global.hsp),y,Wall_obj)) {
        x+=sign(global.hsp);
    };
    global.hsp = 0;
};

if (place_meeting(x,y+global.vsp,Wall_obj)){
    while(!place_meeting(x,y+sign(global.vsp),Wall_obj)) {
        y+=sign(global.vsp);
    };
    global.vsp = 0;
};

if (global.hsp = 0) {
global.sjcounter = 0
}

y+=global.vsp;
x+=global.hsp;


//Health





